<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="ejercicio1.Profesor" table="Profesor" >
		<id column="Id" name="id" type="integer"/>
		<property name="nombre" />
		<property column="ape_1" name="ape1" />
		<property column="ape_2" name="ape2" />
		<list name="correos"  cascade="all" inverse="false"  >
	         <key>
	             <column name="id_prof"  />
	         </key>
	         <list-index>
	             <column name="idx"  />
	         </list-index>
	         <one-to-many class="ejercicio1.Correo" />
     	</list>
	</class>
</hibernate-mapping>