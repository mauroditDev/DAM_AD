package ejercicio3;

import java.io.File;


import javax.xml.parsers.DocumentBuilder;
import javax.xml.parsers.DocumentBuilderFactory;
import org.w3c.dom.Element;
import org.w3c.dom.Document;

public class Ejercicio3 {

	public static int inicial;
	
	public static void main(String[] args) {
		try{
			File biblioteca = new File("/home/alumno/Biblioteca");
			File[] archivos = biblioteca.listFiles();
			inicial = 0;
			File catalogo = new File("/home/alumno/vacia2/catalogo.xml");
			
			DocumentBuilderFactory dbfac = DocumentBuilderFactory.newInstance();
	        DocumentBuilder docBuilder = dbfac.newDocumentBuilder();
	        Document doc = docBuilder.newDocument();
			
			
			
			for(int i = 0; i< archivos.length; i++){
				xmlLibro(archivos[i],doc);
			}
			
		}catch(Exception e){
			e.printStackTrace();
		}
	}
	
	public static void xmlLibro(File origen, Document doc){
		try{
			if(inicial == 0){
				Element biblioteca = doc.createElement("raiz");
	            doc.appendChild(biblioteca);
				inicial = 1;
			}
			
		}catch(Exception e){
			e.printStackTrace();
		}
	}

}
